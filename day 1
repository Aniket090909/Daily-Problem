#include <bits/stdc++.h>
using namespace std;

bool numberspresent(int A[], int arr_size,
						int sum)
{
	int left, right;

	sort(A, A + arr_size);

	left = 0;
	right = arr_size - 1;
	while (left < right) {
		if (A[left] + A[right] == sum)
			return 1;
		else if (A[left] + A[right] < sum)
			left++;
		else // A[i] + A[j] > sum
			right--;
	}
	return 0;
}

int main()
{
	int A[] = { 10,15,3,7 };
	int k = 17;
	int arr_size = sizeof(A) / sizeof(A[0]);


	if (numberspresent(A, arr_size, k))
		cout << "true";
	else
		cout << "false";

	return 0;
}
